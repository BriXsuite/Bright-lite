<!-- 1 Source, 1 rx, 1 Sink -->

<simulation>
  <control>
    <duration>100</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
  </control>

  <archetypes>
    <spec><lib>agents</lib><name>Source</name></spec>
    <spec><lib>Brightlite</lib><name>ReactorFacility</name></spec>
    <spec><lib>Brightlite</lib><name>FuelfabFacility</name></spec>
    <spec><lib>agents</lib><name>Sink</name></spec>
    <spec><lib>agents</lib><name>NullRegion</name></spec>
    <spec><lib>agents</lib><name>NullInst</name></spec>
  </archetypes>

  <facility>
    <name>NUSource</name>
    <config>
      <Source>
        <commod>NU</commod>
        <recipe_name>NU_recipe</recipe_name>
	<capacity>2000.0</capacity>
      </Source>
    </config>
  </facility>

  <facility>
    <name>PUSource</name>
    <config>
      <Source>
        <commod>PU</commod>
        <recipe_name>PU_recipe</recipe_name>
	    <capacity>2000.0</capacity>
      </Source>
    </config>
  </facility>

  <facility>
    <name>Sink</name>
    <config>
      <Sink>
        <in_commods>
          <val>uf</val>
        </in_commods>
        <capacity>1000.0</capacity>
      </Sink>
    </config>
  </facility>
  
  <facility>
    <name>Rx</name>
    <config>
      <ReactorFacility>
        <in_commods>
            <val>MOX</val>       
        </in_commods>
        <out_commod>uf</out_commod>
        <libraries><val>extLWR</val></libraries>
        <target_burnup>60.0</target_burnup>
        <nonleakage>0.966</nonleakage>
        <core_mass>750.0</core_mass>
    	<interpol_pairs>
           <key>BURNUP</key>
	       <val>42.5</val>
        </interpol_pairs>
        <batches>3</batches>
        <flux_mode>2</flux_mode>
        <cylindrical_delta>10</cylindrical_delta>
        <burnupcalc_timestep>40</burnupcalc_timestep>
      </ReactorFacility>
    </config>
  </facility>

  <facility>
    <name>FF</name>
    <config>
      <FuelfabFacility>
        <in_commods>
            <val>NU</val>
            <val>PU</val>
        </in_commods>
        <out_commod>MOX</out_commod>
      </FuelfabFacility>
    </config>
  </facility>

  <region>
    <name>SingleRegion</name>
    <config> <NullRegion/> </config>
    <institution>
      <name>SingleInstitution</name>
      <initialfacilitylist>
        <entry>
          <prototype>NUSource</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>PUSource</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>Rx</prototype>
          <number>0</number>
        </entry>
        <entry>
          <prototype>FF</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>Sink</prototype>
          <number>1</number>
        </entry>
      </initialfacilitylist>
      <config> <NullInst/> </config>
    </institution>
  </region>

  <recipe>
    <name>NU_recipe</name>
    <basis>mass</basis>
    <nuclide>
      <id>U235</id>
      <comp>4</comp>
    </nuclide>
    <nuclide>
      <id>U238</id>
      <comp>96</comp>
    </nuclide>
  </recipe>

  <recipe>
    <name>PU_recipe</name>
    <basis>mass</basis>
    <nuclide>
      <id>PU238</id>
      <comp>0.031</comp>
    </nuclide>
    <nuclide>
      <id>PU239</id>
      <comp>0.5949</comp>
    </nuclide>
    <nuclide>
      <id>PU240</id>
      <comp>0.2297</comp>
    </nuclide>
    <nuclide>
      <id>PU241</id>
      <comp>0.2005</comp>
    </nuclide>
  </recipe>

</simulation>
