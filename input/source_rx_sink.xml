<!-- 1 Source, 1 rx, 1 Sink -->

<simulation>
  <control>
    <duration>300</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
  </control>

  <archetypes>
    <spec><lib>agents</lib><name>Source</name></spec>
    <spec><lib>Brightlite</lib><name>ReactorFacility</name></spec>
    <spec><lib>agents</lib><name>Sink</name></spec>
    <spec><lib>agents</lib><name>NullRegion</name></spec>
    <spec><lib>agents</lib><name>NullInst</name></spec>
  </archetypes>

  <facility>
    <name>Source</name>
    <config>
      <Source>
        <commod>freshFuel</commod>
        <recipe_name>commod_recipe</recipe_name>
	<capacity>250.0</capacity>
      </Source>
    </config>
  </facility>

  <facility>
    <name>Source1</name>
    <config>
      <Source>
        <commod>freshFuel1</commod>
        <recipe_name>commod_recipe1</recipe_name>
	    <capacity>1000.0</capacity>
      </Source>
    </config>
  </facility>

  <facility>
    <name>Source2</name>
    <config>
      <Source>
        <commod>freshFuel2</commod>
        <recipe_name>commod_recipe2</recipe_name>
	    <capacity>250.0</capacity>
      </Source>
    </config>
  </facility>

  <facility>
    <name>Source3</name>
    <config>
      <Source>
        <commod>freshFuel3</commod>
        <recipe_name>commod_recipe3</recipe_name>
	    <capacity>250.0</capacity>
      </Source>
    </config>
  </facility>

  <facility>
    <name>Source4</name>
    <config>
      <Source>
        <commod>freshFuel4</commod>
        <recipe_name>commod_recipe4</recipe_name>
        <capacity>250.0</capacity>
      </Source>
    </config>
  </facility>
  
  <facility>
    <name>Source5</name>
    <config>
      <Source>
        <commod>freshFuel5</commod>
        <recipe_name>commod_recipe5</recipe_name>
        <capacity>250.0</capacity>
      </Source>
    </config>
  </facility>

  <facility>
    <name>Sink</name>
    <config>
      <Sink>
        <in_commods>
          <val>uf</val>
        </in_commods>
        <capacity>1000.0</capacity>
      </Sink>
    </config>
  </facility>

  <facility>
    <name>Rx</name>
    <config>
      <ReactorFacility>
        <in_commods>
            <val>freshFuel</val>
            <val>freshFuel1</val>
            <val>freshFuel2</val>
            <val>freshFuel3</val>
            <val>freshFuel4</val>
            <val>freshFuel5</val>
        </in_commods>
        <out_commod>uf</out_commod>
        <libraries><val>extLWR</val></libraries>
        <target_burnup>60.0</target_burnup>
        <nonleakage>0.99</nonleakage>
        <core_mass>1250.0</core_mass>
        <batches>5</batches>
        <flux_mode>2</flux_mode>
        <cylindrical_delta>10</cylindrical_delta>
        <burnupcalc_timestep>100</burnupcalc_timestep>
      </ReactorFacility>
    </config>
  </facility>

  <region>
    <name>SingleRegion</name>
    <config> <NullRegion/> </config>
    <institution>
      <name>SingleInstitution</name>
      <initialfacilitylist>
        <entry>
          <prototype>Source</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>Source1</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>Source2</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>Source3</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>Source4</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>Source5</prototype>
          <number>1</number>
        </entry>        
        <entry>
          <prototype>Rx</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>Sink</prototype>
          <number>1</number>
        </entry>
      </initialfacilitylist>
      <config> <NullInst/> </config>
    </institution>
  </region>

  <recipe>
    <name>commod_recipe</name>
    <basis>mass</basis>
    <nuclide>
      <id>U235</id>
      <comp>4.2</comp>
    </nuclide>
    <nuclide>
      <id>U238</id>
      <comp>95.8</comp>
    </nuclide>
  </recipe>

  <recipe>
    <name>commod_recipe1</name>
    <basis>mass</basis>
    <nuclide>
      <id>U235</id>
      <comp>1.8</comp>
    </nuclide>
    <nuclide>
      <id>U238</id>
      <comp>98.2</comp>
    </nuclide>
  </recipe>

  <recipe>
    <name>commod_recipe2</name>
    <basis>mass</basis>
    <nuclide>
      <id>U235</id>
      <comp>2.204</comp>
    </nuclide>
    <nuclide>
      <id>U238</id>
      <comp>97.796</comp>
    </nuclide>
  </recipe>

  <recipe>
    <name>commod_recipe3</name>
    <basis>mass</basis>
    <nuclide>
      <id>U235</id>
      <comp>2.656</comp>
    </nuclide>
    <nuclide>
      <id>U238</id>
      <comp>97.344</comp>
    </nuclide>
  </recipe>

  <recipe>
    <name>commod_recipe4</name>
    <basis>mass</basis>
    <nuclide>
      <id>U235</id>
      <comp>3.1</comp>
    </nuclide>
    <nuclide>
      <id>U238</id>
      <comp>96.9</comp>
    </nuclide>
  </recipe>
  
  <recipe>
    <name>commod_recipe5</name>
    <basis>mass</basis>
    <nuclide>
      <id>U235</id>
      <comp>3.9</comp>
    </nuclide>
    <nuclide>
      <id>U238</id>
      <comp>96.1</comp>
    </nuclide>
  </recipe>
</simulation>
