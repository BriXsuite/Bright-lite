<!-- 
Used to benchmark spatialflux method

MCNP returns fluxes, with these input parameters:
1.000 | 0.887 | 0.759 
-->

<simulation>
  <control>
    <duration>5</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
  </control>

  <archetypes>
    <spec><lib>agents</lib><name>Source</name></spec>
    <spec><lib>Brightlite</lib><name>ReactorFacility</name></spec>
    <spec><lib>agents</lib><name>Sink</name></spec>
    <spec><lib>agents</lib><name>NullRegion</name></spec>
    <spec><lib>agents</lib><name>NullInst</name></spec>
  </archetypes>

  <facility>
    <name>Source</name>
    <config>
      <Source>
        <commod>freshFuel</commod>
        <recipe_name>commod_recipe</recipe_name>
	<capacity>500000</capacity>
      </Source>
    </config>
  </facility>

  <facility>
    <name>Source1</name>
    <config>
      <Source>
        <commod>freshFuel1</commod>
        <recipe_name>commod_recipe1</recipe_name>
	<capacity>35000.0</capacity>
      </Source>
    </config>
  </facility>

  <facility>
    <name>Source2</name>
    <config>
      <Source>
        <commod>freshFuel2</commod>
        <recipe_name>commod_recipe2</recipe_name>
	<capacity>35000.0</capacity>
      </Source>
    </config>
  </facility>

  <facility>
    <name>Source3</name>
    <config>
      <Source>
        <commod>freshFuel3</commod>
        <recipe_name>commod_recipe3</recipe_name>
	<capacity>35000.0</capacity>
      </Source>
    </config>
  </facility>

  <facility>
    <name>Source4</name>
    <config>
      <Source>
        <commod>freshFuel4</commod>
        <recipe_name>commod_recipe4</recipe_name>
	<capacity>35000.0</capacity>
      </Source>
    </config>
  </facility>
  
  <facility>
    <name>Sink</name>
    <config>
      <Sink>
        <in_commods>
          <val>uf</val>
        </in_commods>
        <capacity>1000000.0</capacity>
      </Sink>
    </config>
  </facility>

  <facility>
    <name>Rx</name>
    <config>
      <ReactorFacility>
        <in_commods>
            <val>freshFuel</val> 
        </in_commods>
        <out_commod>uf</out_commod>
        <libraries><val>extLWR</val></libraries>
        <target_burnup>0.0</target_burnup>
        <nonleakage>0.9773</nonleakage>
        <core_mass>112000</core_mass>
        <generated_power>1390</generated_power>
        <batches>2</batches>
        <flux_mode>3</flux_mode>
        <reactor_life>480</reactor_life>
	<fuel_area>89197</fuel_area>
	<fuel_Sig_tr>0.40</fuel_Sig_tr>
	<mod_Sig_a>0.02</mod_Sig_a>
	<mod_Sig_tr>.4</mod_Sig_tr>
	<cylindrical_delta>6</cylindrical_delta>
        <burnupcalc_timestep>300</burnupcalc_timestep>
        <DA_mode>0</DA_mode>	
        <CR_fissile>
            <val>902250</val>
            <val>902270</val>
            <val>902290</val>
            <val>922350</val>
            <val>942380</val>
            <val>942390</val>
            <val>942400</val>
            <val>942410</val>
            <val>942420</val>
            <val>952400</val>
            <val>952420</val>
            <val>952440</val>
        </CR_fissile>
      </ReactorFacility>
    </config>
  </facility>

  <region>
    <name>SingleRegion</name>
    <config> <NullRegion/> </config>
    <institution>
      <name>SingleInstitution</name>
      <initialfacilitylist>
        <entry>
          <prototype>Source</prototype>
          <number>1</number>
        </entry>   
        <entry>
          <prototype>Source1</prototype>
          <number>1</number>
        </entry> 
        <entry>
          <prototype>Source2</prototype>
          <number>1</number>
        </entry> 
        <entry>
          <prototype>Source3</prototype>
          <number>1</number>
        </entry>  
        <entry>
          <prototype>Source4</prototype>
          <number>1</number>
        </entry>     
        <entry>
          <prototype>Rx</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>Sink</prototype>
          <number>1</number>
        </entry>
      </initialfacilitylist>
      <config> <NullInst/> </config>
    </institution>
  </region>

  <recipe>
    <name>commod_recipe</name>
    <basis>mass</basis>
    <nuclide>
      <id>U235</id>
      <comp>3.6</comp>
    </nuclide>
    <nuclide>
      <id>U238</id>
      <comp>96.4</comp>
    </nuclide>
  </recipe>
  
  <recipe>
    <name>commod_recipe1</name>
    <basis>mass</basis>
    <nuclide>
      <id>U235</id>
      <comp>1.8</comp>
    </nuclide>
    <nuclide>
      <id>U238</id>
      <comp>98.2</comp>
    </nuclide>
  </recipe>
  
  <recipe>
    <name>commod_recipe2</name>
    <basis>mass</basis>
    <nuclide>
      <id>U235</id>
      <comp>2.204</comp>
    </nuclide>
    <nuclide>
      <id>U238</id>
      <comp>97.796</comp>
    </nuclide>
  </recipe>
  
  <recipe>
    <name>commod_recipe3</name>
    <basis>mass</basis>
    <nuclide>
      <id>U235</id>
      <comp>2.656</comp>
    </nuclide>
    <nuclide>
      <id>U238</id>
      <comp>97.344</comp>
    </nuclide>
  </recipe>
  
  <recipe>
    <name>commod_recipe4</name>
    <basis>mass</basis>
    <nuclide>
      <id>U235</id>
      <comp>3.1</comp>
    </nuclide>
    <nuclide>
      <id>U238</id>
      <comp>96.9</comp>
    </nuclide>
  </recipe>

</simulation>
